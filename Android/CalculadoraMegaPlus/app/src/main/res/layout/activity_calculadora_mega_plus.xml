<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="0,1,2,3"
    android:padding="5dp"
    android:background="@android:color/black">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_light">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="4">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/tvConta"
                android:layout_span="5"
                android:textSize="50dp"
                android:autoText="false"
                android:gravity="right"
                android:layout_margin="5dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/tvResultado"
                android:layout_span="5"
                android:textSize="25dp"
                android:layout_weight="2"
                android:gravity="right"
                android:layout_margin="5dp" />

        </LinearLayout>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:id="@+id/bt7"
            android:textSize="30dp"
            android:height="75dp"
            android:background="@android:color/holo_green_dark"
            android:textColor="@android:color/background_light"
            android:clickable="false"
            android:focusable="false" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:id="@+id/bt8"
            android:textSize="30dp"
            android:height="75dp"
            android:background="@android:color/holo_green_dark"
            android:textColor="@android:color/background_light" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:id="@+id/bt9"
            android:textSize="30dp"
            android:height="75dp"
            android:background="@android:color/holo_green_dark"
            android:textColor="@android:color/background_light" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:id="@+id/btDiv"
            android:textSize="30dp"
            android:height="75dp"
            android:background="@android:color/holo_green_light"
            android:textColor="@android:color/background_light" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:id="@+id/bt4"
            android:textSize="30dp"
            android:height="75dp"
            android:background="@android:color/holo_green_dark"
            android:textColor="@android:color/background_light" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:id="@+id/bt5"
            android:textSize="30dp"
            android:height="75dp"
            android:background="@android:color/holo_green_dark"
            android:textColor="@android:color/background_light" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:id="@+id/bt6"
            android:textSize="30dp"
            android:height="75dp"
            android:background="@android:color/holo_green_dark"
            android:textColor="@android:color/background_light" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:id="@+id/btMul"
            android:textSize="30dp"
            android:height="75dp"
            android:background="@android:color/holo_green_light"
            android:textColor="@android:color/background_light" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/bt1"
            android:textSize="30dp"
            android:height="75dp"
            android:background="@android:color/holo_green_dark"
            android:textColor="@android:color/background_light" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:id="@+id/bt2"
            android:textSize="30dp"
            android:height="75dp"
            android:background="@android:color/holo_green_dark"
            android:textColor="@android:color/background_light" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:id="@+id/bt3"
            android:textSize="30dp"
            android:height="75dp"
            android:background="@android:color/holo_green_dark"
            android:textColor="@android:color/background_light" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/btSub"
            android:textSize="30dp"
            android:height="75dp"
            android:layout_column="3"
            android:background="@android:color/holo_green_light"
            android:textColor="@android:color/background_light" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:id="@+id/btPonto"
            android:textSize="30dp"
            android:height="75dp"
            android:layout_column="0"
            android:background="@android:color/holo_green_dark"
            android:textColor="@android:color/background_light" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/bt0"
            android:textSize="30dp"
            android:height="75dp"
            android:layout_column="1"
            android:background="@android:color/holo_green_dark"
            android:textColor="@android:color/background_light" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:id="@+id/btIgual"
            android:textSize="30dp"
            android:height="75dp"
            android:layout_column="2"
            android:background="@android:color/holo_green_dark"
            android:textColor="@android:color/background_light" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/btSom"
            android:textSize="30dp"
            android:height="75dp"
            android:layout_column="3"
            android:background="@android:color/holo_green_light"
            android:textColor="@android:color/background_light" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:id="@+id/btLimpar"
            android:textSize="30dp"
            android:layout_span="2"
            android:height="75dp"
            android:background="@android:color/holo_green_light"
            android:textColor="@android:color/background_light" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="("
            android:id="@+id/btAbrePar"
            android:height="75dp"
            android:textSize="30dp"
            android:background="@android:color/holo_green_light"
            android:textColor="@android:color/background_light" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=")"
            android:id="@+id/btFechaPar"
            android:height="75dp"
            android:textSize="30dp"
            android:layout_column="3"
            android:background="@android:color/holo_green_light"
            android:textColor="@android:color/background_light" />
    </TableRow>

</TableLayout>
