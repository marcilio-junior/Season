<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/edPrimeiroNumero"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView3"
        android:inputType="numberDecimal" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/edSegundoNumero"
        android:layout_below="@+id/edPrimeiroNumero"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/btCalcular"
        android:layout_alignStart="@+id/edPrimeiroNumero"
        android:inputType="numberDecimal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calcular"
        android:id="@+id/btCalcular"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:onClick="mostrar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/resultado"
        android:id="@+id/edResultado"
        android:layout_below="@+id/btCalcular"
        android:layout_marginTop="24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/primeiro_numero"
        android:id="@+id/textView2"
        android:layout_alignBaseline="@+id/edPrimeiroNumero"
        android:layout_alignBottom="@+id/edPrimeiroNumero"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/segundo_numero"
        android:id="@+id/textView3"
        android:layout_alignBaseline="@+id/edSegundoNumero"
        android:layout_alignBottom="@+id/edSegundoNumero"
        android:layout_alignParentStart="true" />

</RelativeLayout>
